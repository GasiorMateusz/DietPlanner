---
import "../styles/global.css";
import { AppWithTranslations } from "@/components/AppWithTranslations";
// import { createSupabaseServerClient } from "@/db/supabase.server";

interface Props {
  title?: string;
}

const { title = "Diet Planner" } = Astro.props;
// eslint-disable-next-line no-console
console.log("[Layout] Rendering layout with title:", title);

// Verify user session - use getUser() to ensure authenticity
// const supabase = createSupabaseServerClient(Astro.cookies);
// const {
//   data: { user },
// } = await supabase.auth.getUser();

// const userEmail = user?.email;

// Default theme - blocking script will check localStorage
const initialTheme = "light";
---

<!doctype html>
<html lang="en" class={initialTheme === "dark" ? "dark" : ""}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {/* Blocking script to apply theme before first paint to prevent flash */}
    <script is:inline define:vars={{ initialTheme }}>
      (function () {
        // Get theme from localStorage or use server-provided initial theme
        const storedTheme = localStorage.getItem("app-theme");
        const theme = storedTheme && (storedTheme === "light" || storedTheme === "dark") ? storedTheme : initialTheme;

        // Apply theme class immediately
        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body>
    <AppWithTranslations client:load>
      <slot />
    </AppWithTranslations>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
