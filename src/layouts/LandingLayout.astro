---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Diet Planner - AI-Powered Meal Planning for Dietitians" } = Astro.props;
// eslint-disable-next-line no-console
console.log("[LandingLayout] Rendering layout with title:", title);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }
</style>
