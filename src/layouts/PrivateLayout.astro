---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Diet Planner" } = Astro.props;

// Authentication check is handled in middleware for /app/* routes
// This layout assumes the user is authenticated if they reached here
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
