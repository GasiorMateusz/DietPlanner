---
import "../styles/global.css";
import { AppWithTranslations } from "@/components/AppWithTranslations";
import { createSupabaseServerClient } from "@/db/supabase.server";
import * as UserPreferenceService from "@/lib/user-preferences/user-preference.service";

interface Props {
  title?: string;
}

const { title = "Diet Planner" } = Astro.props;

// Authentication check is handled in middleware for /app/* routes
// This layout assumes the user is authenticated if they reached here
// Use getUser() to verify user data is authentic
const supabase = createSupabaseServerClient(Astro.cookies);
const {
  data: { user },
} = await supabase.auth.getUser();

const userEmail = user?.email;

// Try to get theme preference from database for authenticated users
let initialTheme = "light";
if (user?.id) {
  try {
    const preferences = await UserPreferenceService.getAllUserPreferences(user.id, supabase);
    initialTheme = preferences.theme;
  } catch (error) {
    // If fetching fails, fall back to default "light"
    // The blocking script will handle localStorage fallback
  }
}
---

<!doctype html>
<html lang="en" class={initialTheme === "dark" ? "dark" : ""}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {/* Blocking script to apply theme before first paint to prevent flash */}
    <script is:inline define:vars={{ initialTheme }}>
      (function() {
        // Get theme from localStorage or use server-provided initial theme
        const storedTheme = localStorage.getItem("app-theme");
        const theme = storedTheme && (storedTheme === "light" || storedTheme === "dark") 
          ? storedTheme 
          : initialTheme;
        
        // Apply theme class immediately
        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body>
    <AppWithTranslations userEmail={userEmail} client:load>
      <slot />
    </AppWithTranslations>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
