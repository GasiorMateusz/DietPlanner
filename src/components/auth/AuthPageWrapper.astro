---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="w-full max-w-md">
  <div class="text-center mb-8">
    <div class="flex justify-center mb-4">
      <img src="/favicon.png" alt="Diet Planner logo" class="h-16 w-16" />
    </div>
    <h1 class="text-3xl font-bold mb-2">Diet Planner</h1>
    <p class="text-muted-foreground">AI-Powered Meal Planning for Dietitians</p>
  </div>
  <section class="w-full rounded-xl border bg-card text-card-foreground shadow-sm p-6" aria-labelledby="auth-page-title">
    <header class="mb-6 text-center">
      <h2 id="auth-page-title" class="text-2xl font-semibold">{title}</h2>
      {subtitle && <p class="text-sm text-muted-foreground mt-1" id="auth-page-subtitle">{subtitle}</p>}
    </header>
    <slot />
  </section>
</div>

