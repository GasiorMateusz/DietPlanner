---
import Layout from "@/layouts/Layout.astro";
import RegisterForm from "@/components/auth/RegisterForm";
import { createSupabaseServerClient } from "@/db/supabase.server";
import { getAuthenticatedUser } from "@/lib/auth/auth-state.server";

const supabase = createSupabaseServerClient(Astro.cookies);
const user = await getAuthenticatedUser(supabase);

if (user) {
  return Astro.redirect("/app/dashboard");
}

const title = "Create account â€“ Diet Planner";
---

<Layout title={title}>
  <main class="min-h-screen grid place-items-center bg-background px-4 py-12">
    <section class="w-full max-w-md rounded-xl border bg-card text-card-foreground shadow-sm p-6">
      <header class="mb-6 text-center">
        <h1 class="text-2xl font-semibold">Create your account</h1>
        <p class="text-sm text-muted-foreground mt-1">Start planning better meals</p>
      </header>
      <RegisterForm client:load />
    </section>
  </main>
</Layout>
