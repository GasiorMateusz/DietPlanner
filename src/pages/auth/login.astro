---
import Layout from "@/layouts/Layout.astro";
import LoginForm from "@/components/auth/LoginForm";
import AuthPageWrapper from "@/components/auth/AuthPageWrapper.astro";
import { createSupabaseServerClient } from "@/db/supabase.server";
import { getAuthenticatedUser } from "@/lib/auth/auth-state.server";

const supabase = createSupabaseServerClient(Astro.cookies);
const user = await getAuthenticatedUser(supabase);

if (user) {
  return Astro.redirect("/app/dashboard");
}

const title = "Log in â€“ Diet Planner";
---

<Layout title={title}>
  <main class="min-h-screen grid place-items-center bg-background px-4 py-12">
    <AuthPageWrapper titleKey="auth.welcomeBack" subtitleKey="auth.loginToAccount">
      <LoginForm client:load />
    </AuthPageWrapper>
  </main>
</Layout>
