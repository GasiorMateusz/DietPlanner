---

<Layout title={title}>
  <main class="min-h-screen grid place-items-center bg-background px-4 py-12">
    <section class="w-full max-w-md rounded-xl border bg-card text-card-foreground shadow-sm p-6">
      <header class="mb-6 text-center">
        <h1 class="text-2xl font-semibold">Welcome back</h1>
        <p class="text-sm text-muted-foreground mt-1">Log in to your account</p>
      </header>
      <LoginForm client:load />
    </section>
  </main>
</Layout>
