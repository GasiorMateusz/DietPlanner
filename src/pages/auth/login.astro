---

<Layout title={title}>
  <main class="min-h-screen grid place-items-center bg-background px-4 py-12">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <div class="flex justify-center mb-4">
          <img src="/favicon.png" alt="Diet Planner" class="h-16 w-16" />
        </div>
        <h1 class="text-3xl font-bold mb-2">Diet Planner</h1>
        <p class="text-muted-foreground">AI-Powered Meal Planning for Dietitians</p>
      </div>
      <section class="w-full rounded-xl border bg-card text-card-foreground shadow-sm p-6">
        <header class="mb-6 text-center">
          <h2 class="text-2xl font-semibold">Welcome back</h2>
          <p class="text-sm text-muted-foreground mt-1">Log in to your account</p>
        </header>
        <LoginForm client:load />
      </section>
    </div>
  </main>
</Layout>
